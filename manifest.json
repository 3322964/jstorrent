{
    "name": "JSTorrent Lite",
    "short_name": "JSTorrent Lite",
    "description": "A Torrent Client for Google Chrome, runs everywhere in pure JavaScript (Lite version)",
    "author": "Kyle Graehl",
    "version": "2.0.0",
    "manifest_version": 2,
    "offline_enabled": true,
    "minimum_chrome_version": "31",
    "file_handlers": {
        "any": {
            "types": [
                "application/x-bittorrent"
            ],
            "extensions": [
                "torrent"
            ],
            "title": "Open with JSTorrent Lite"
        }
    },
    "permissions": [
        {"fileSystem":["write","directory","retainEntries"]},
        {"socket":[
            "tcp-connect",
            "udp-bind::",
            "tcp-listen::",
            "udp-send-to::"
        ]},
        "contextMenus",
        "storage",
        "clipboardWrite",
        "system.storage",
        "idle",
        "notifications",
        "http://*/",
        "https://*/",
        "https://www.googleapis.com/"
    ],
    "oauth2": {
        "client_id": "432934632994-7if8sp8g5mc0gojarmeq8aaet04494hj.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/drive.file"]
    },
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": { 
        "16": "icon16.png", 
        "48": "icon48.png", 
        "128": "icon128.png" 
    }
}
